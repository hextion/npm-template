{
  "name": "npm-template",
  "version": "0.0.1",
  "description": "npm template",
  "scripts": {
    "format": "prettier --list-different \"**/*.{js,md,json}\"",
    "format:fix": "npm run format -- --write",
    "lint": "eslint --ext .js --max-warnings 0 src",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Salavat Gizatov <100ishundred@gmail.com> (https://github.com/hextion)",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1"
  }
}
